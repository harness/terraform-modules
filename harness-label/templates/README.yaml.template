  - name: "Latest Release"
    image: "https://img.shields.io/github/release/harness/terraform-MODULE_NAME_HERE.svg?style=for-the-badge"
    url: "https://github.com/harness/terraform-MODULE_NAME_HERE/releases/latest"
  - name: "License"  
    image: "https://img.shields.io/github/license/harness/terraform-MODULE_NAME_HERE.svg?style=for-the-badge"
