# Usage examples
usage:
  - name: "Basic Usage"
    description: "Simple example showing basic module usage"
    code: |
      module "example" {
        source = "git::https://github.com/harness/terraform-MODULE_NAME_HERE.git?ref=main"
        
        # Required variables
        name        = "example"
        environment = "dev"
        
        # Optional variables
        tags = {
          Project = "MyProject"
          Owner   = "team@company.com"
        }
      }

  - name: "Advanced Usage" 
    description: "Example showing advanced configuration options"
    code: |
      module "advanced_example" {
        source = "git::https://github.com/harness/terraform-MODULE_NAME_HERE.git?ref=main"
        
        # Advanced configuration here
        name        = "advanced-example"
        environment = "prod"
        
        # Module-specific advanced options
        enable_feature_x = true
        custom_config = {
          setting1 = "value1"
          setting2 = "value2" 
        }
      }

# Examples directory references
examples:
  - name: "Complete Example"
    description: "Comprehensive example with all features"
    url: "./examples/complete/"
  - name: "Basic Example"  
    description: "Simple usage example"
    url: "./examples/basic/"

